	rm -f test.log
	touch test.log
	rm -f test.sh
	echo "#! /bin/sh"                                         >  test.sh
	for dir in $(test_directory_list) ; do ( \
		echo "echo $$dir >> test.log ; pushd $$dir "         >> test.sh ; \
		echo "if ! make test ; then exit 1 ; fi "            >> test.sh ; \
		echo "cat test.log >> $(abs_top_builddir)/test.log"  >> test.sh ; \
		echo "popd ; echo >> test.log"                       >> test.sh ; \
	) done
	chmod +x test.sh
	./test.sh
	cat test.log
